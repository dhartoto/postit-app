<%= form_for @user do |f| %>
  <%= render 'shared/alert', alert: @user.errors %>
  <div class='control-group'>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class='control-group'>
  <%= f.label 'Time Zone' %>
  <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
  </div>
  <br/>
  <div class='control-group'>
  <%= f.label :password %>
  <%= f.password_field :password %>
  </div>
  <%= f.submit @user.new_record? ? "Register" : "Update Profile", class: "btn btn-info" %>
<% end %>
